<div class="wrapper wrapper-full-page">
    <div class="page-header register-page header-filter" id="coverImage" filter-color="black"
         style="background-image: url('/static/img/race-2.jpg'); background-size: cover; background-position: top center;">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-sm-12 m-auto">
                    <div class="card card-stats mb-0">
                        <div class="card-header card-header-info card-header-icon">
                            <div class="card-icon">
                                <i class="fas fa-trophy"></i>
                            </div>
                            <p class="card-category">Race Timing</p>
                            <h3 class="card-title">Entry Leaderboard</h3>
                        </div>
                        <div class="card-footer">
                            <div class="table-responsive">
                                <table class="table table-hover table-striped dt-responsive display nowrap"
                                       id="leaderTable" style="width: 100%">
                                    <thead class="text-muted">
                                    <th>Place</th>
                                    <th>Name</th>
                                    <th>Time/Status</th>
                                    <th>Category</th>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <h6 class="float-right pt-2 mb-2 pr-2"><span id="refreshCount"></span></h6>
                </div>
                <div class="col-lg-3 col-sm-12 m-auto">
                    <div class="card card-stats mb-5">
                        <div class="card-header card-header-muted card-header-icon">
                            <div class="card-icon">
                                <i class="far fa-copy"></i>
                            </div>
                            <p class="card-category"><strong>Total Entries</strong></p>
                            <h3 class="card-title"><span id="totalStat">0</span></h3>
                        </div>
                        <div class="card-footer">
                            <div class="stats">
                                <i class="material-icons">history</i>
                                <span id="pushedDate1">Just Now</span>
                            </div>
                        </div>
                    </div>
                    <div class="card card-stats">
                        <div class="card-header card-header-info card-header-icon">
                            <div class="card-icon">
                                <i class="fas fa-water"></i>
                            </div>
                            <p class="card-category"><strong>Entries in Water</strong></p>
                            <h3 class="card-title text-info"><span id="inwaterStat">0</span></h3>
                        </div>
                        <div class="card-footer">
                            <div class="stats">
                                <i class="material-icons">history</i>
                                <span id="pushedDate2">Updated Just Now</span>
                            </div>
                        </div>
                    </div>
                    <div class="card card-stats mt-5">
                        <div class="card-header card-header-success card-header-icon">
                            <div class="card-icon">
                                <i class="fas fa-flag-checkered"></i>
                            </div>
                            <p class="card-category"><strong>Entries Finished</strong></p>
                            <h3 class="card-title text-success"><span id="finishStat">0</span></h3>
                        </div>
                        <div class="card-footer">
                            <div class="stats">
                                <i class="material-icons">history</i>
                                <span id="pushedDate3">Updated Just Now</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer">
            <div class="container">
                <div class="copyright float-right pr-2">
                    Made with <a class="text-danger"><i class="fas fa-heart"></i></a> by <a class="text-white" href="https://github.com/RAK3RMAN">Radison Akerman</a>
                </div>
            </div>
        </footer>
    </div>
</div>
